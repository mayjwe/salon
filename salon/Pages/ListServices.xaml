<Page x:Class="salon.Pages.ListServices"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:salon.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220*"/>
            <ColumnDefinition Width="220*"/>
            <ColumnDefinition Width="220*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Vertical" HorizontalAlignment="Center">
            <TextBlock Text="Введите код для администратора:"/>
            <!-- ИЗМЕНИТЕ ЗДЕСЬ: TextChanged вместо SelectionChanged -->
            <TextBox Name="tbAdminCode" TextChanged="tbAdminCode_TextChanged"/>
        </StackPanel>
        <Button x:Name="btnToRequests" Grid.Row="0" Grid.Column="1" Content="К записям" Visibility="Collapsed" Click="btnToRequests_Click"/>
        <Button x:Name="btnAddService" Grid.Row="0" Grid.Column="2" Content="Добавить услугу" Visibility="Collapsed" Click="btnAddService_Click"/>

        <TextBox Name="tbSearch" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="5, 0, 5, 0" TextChanged="tbSearch_TextChanged"/>
        <ComboBox Name="cbSorting" Grid.Row="1" Grid.Column="1" SelectedIndex="0" VerticalAlignment="Center" Margin="5, 0, 5, 0" SelectionChanged="cbSorting_SelectionChanged"/>
        <ComboBox Name="cbFilter" Grid.Row="1" Grid.Column="2" SelectedIndex="0" VerticalAlignment="Center" Margin="5, 0, 5, 0" SelectionChanged="cbFilter_SelectionChanged"/>

        <ListView Name="LViewServices" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" MouseDoubleClick="LViewServices_MouseDoubleClick" Margin="5" d:ItemsSource="{d:SampleData ItemCount=2}">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Black" BorderThickness="1" Background="{Binding Background}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Image Width="180" Height="100" Margin="5" Source="{Binding ImgPath}"/>

                            <StackPanel Grid.Column="1" Margin="5">
                                <TextBlock Text="{Binding Title}"/>
                                <TextBlock Text="{Binding CostDuration}"/>
                                <TextBlock Text="{Binding DiscountString}"/>
                                <StackPanel Orientation="Horizontal">
                                    <Button x:Name="btnEditService" Content="Редактировать" Width="200" Click="btnEditService_Click"/>
                                    <Button x:Name="btnDeleteService" Content="Удалить" Click="btnDeleteService_Click"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <StackPanel Orientation="Horizontal" Grid.Row="4" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock x:Name="txtResultAmount"/>
            <TextBlock Text="из"/>
            <TextBlock x:Name="txtAllAmount"/>
        </StackPanel>
    </Grid>
</Page>